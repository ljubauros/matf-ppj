GOAL = lmao
CXX = g++
CXXFLAGS = -std=c++14

$(GOAL): lex.yy.o parser.tab.o
	$(CXX) -o $@ $^

parser.tab.o: parser.tab.cpp parser.tab.hpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

lex.yy.o: lex.yy.c parser.tab.hpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

lex.yy.c: lexer.l
	flex -i $<

parser.tab.cpp parser.tab.hpp: parser.ypp
	bison -v -d $<

.PHONY: clean

clean:
	rm parser.tab.* parser.output lex.yy.* $(GOAL)
